<div class="mx-auto" style="width: 300px;">



    <h2>User info</h2>
    <%= form_with model: @user do |f| %>

    <div>

    <p>Name</p>

    <%= f.text_field :name%>

    <p>Image</p>
    <%= f.file_field :image, accept: "image/*" %>

    <p>Introduction</p>

    <%= f.text_area :introduction %>

    <br>

    <%= f.submit 'Update User' class:"btn btn-secondary" %>

    </div>

    <% end %>

</div>