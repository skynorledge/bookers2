<%= flash[:notice] %>

<div class = "container">
  <div class = "row">


    <div class = "col-md-4">

    <h2>User info</h2>


    <%= image_tag @user.get_profile_image(100,100) %>


    <div>

      <p>name：<%= @user.name %></p>
      <p>introduction： <%= @user.introduction %></p>

    </div>


    <%= link_to edit_user_path(@user.id) ,class: "btn btn-outline-secondary btn-block w-50 mt-2" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>

    <h2>New Book</h2>

    <%= form_with model: @book,url:'/books',method: :post do |f| %>

      <p>Title</p>
      <%= f.text_field :title %>

      <p>Opinion</p>
      <%= f.text_area :body %>

      <br>

    <%= f.submit 'Create Book' ,class:"btn btn-success" %>

    <% end %>

    </div>

      <div class = "col-md-8">

        <h2>Books</h2>

        <table class = "table table-hover table-inverse">
          <thead>
            <tr>
              <th colspan="1"></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>

          <tbody>

          <% @books.each do |book| %>

            <tr>
              <td>
                  <%= image_tag book.user.get_profile_image(100,100) %>
              </td>

              <td><%= book.title %></td>

              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>

      </div>

  </div>
</div>




